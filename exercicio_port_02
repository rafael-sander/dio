//Função do algoritmo: criação de tabuada com o usuário definindo o multiplicador
//Autor: Rafael Sander

programa
{
	funcao inicio()
	{
		inteiro contador, limite, resultado, mult
		
		contador = 0
		limite = 10
		
		escreva("Digite um número de 1 a 10 para ver sua respectiva tabuada: ")
		leia(mult)
		
		
		se(mult < 1 ou mult > 10)
		{
		    escreva("O número deve ser entre 1 e 10")
		}
		senao
		{
		    faca
		    {
		        resultado = mult * contador
		        escreva(mult + " X " + contador + " = " + resultado + "\n")
		        contador ++
		    }
		    enquanto (contador <= limite)
		}
		
		
		
	}
}

programa
{
	funcao inicio()
	{
	  escreva("Escolha uma das opções a seguir:\n\n")
		escreva("1 - Abrir Netflix \n2 - Abrir Amazon Prime \n3 - Abrir HBO Go \n4 - Sair")
		escreva("\n\nSua opção: ")
		
		inteiro menu = 0
		leia(menu)
		
		escolha(menu)
		{
		    caso 1:
		    escreva("OK, abrir Netflix!")
		    pare
		    caso 2:
		    escreva("OK, abrir Amazon Prime!")
		    pare
		    caso 3:
		    escreva("OK, abrir HBO Go!")
		    pare
		    caso 4:
		    escreva("OK, sair do menu!")
		    pare
		    caso contrario:
		    escreva("Você deve escolhes as opções 1, 2, 3 ou 4.")
		}
	}
}
